<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    android:layout_margin="16dp"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/txtScore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#00A9DE"
            android:gravity="center_horizontal"
            android:text="Score : 100"
            android:textColor="@android:color/white"
            android:textSize="20sp" />

        <RelativeLayout
            android:layout_below="@+id/txtScore"
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgUser"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/hulkbusterironman"/>

            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:padding="8dp"
                android:layout_toEndOf="@+id/imgUser"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/txtUsername"
                    android:text="Ali Rohmansyah"
                    android:textSize="18sp"
                    android:textColor="#353535"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/txtCorrectAnswer"
                    android:text="Correct Answer : 1900"
                    android:textColor="#A2A2A2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>
</android.support.v7.widget.CardView>